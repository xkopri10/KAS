<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kas_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutAppActivity"
            android:screenOrientation="portrait"
            android:label="About application"/>
        <activity android:name=".DecryptActivity"
            android:screenOrientation="portrait"
            android:label="Decryption"/>
        <activity android:name=".EncryptActivity"
            android:screenOrientation="portrait"
            android:label="Encryption"/>
        <activity android:name=".GenerateKeyAndSendKeyActivity"
            android:screenOrientation="portrait"
            android:label="Generate key"/>
        <activity android:name=".MainActivity"
            android:label="RSA algorithm"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>